{
	"name": "ist-discord-bot",
	"version": "2.8.4",
	"description": "Discord bot to manage the IST Hub server.",
	"keywords": [
		"discord",
		"bot",
		"ist-hub",
		"ist",
		"tecnico"
	],
	"homepage": "https://discord.leic.pt",
	"main": "dist/bot.js",
	"repository": "git@github.com:ist-bot-team/ist-discord-bot",
	"author": "IST Bot Team",
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=10.0.0"
	},
	"dependencies": {
		"@discordjs/builders": "^1.11.3",
		"@discordjs/rest": "^2.6.0",
		"@prisma/client": "6.16.3",
		"@types/better-sqlite3": "^7.6.13",
		"axios": "^1.12.2",
		"cheerio": "1.1.2",
		"discord.js": "^14.22.1",
		"node-cron": "^4.2.1",
		"path": "^0.12.7",
		"pino": "^10.0.0",
		"prisma": "6.16.3",
		"rss-parser": "^3.13.0",
		"turndown": "^7.2.1"
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^24.6.2",
		"@types/node-cron": "^3.0.11",
		"@types/turndown": "^5.0.5",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"pino-pretty": "^13.1.1",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"prepare": "husky",
		"build": "tsc",
		"start": "node --enable-source-maps . | pino-pretty -c",
		"start:docker": "prisma migrate deploy && node .",
		"start:docker:dev": "npm run start:docker | pino-pretty -c",
		"prisma:generate": "prisma generate",
		"format": "prettier --write --ignore-unknown src/**/*",
		"format:check": "prettier --check --ignore-unknown src/**/*"
	},
	"lint-staged": {
		"src/**/*": "prettier --write --ignore-unknown"
	},
	"prisma": {
		"schema": "src/prisma/schema.prisma"
	}
}
