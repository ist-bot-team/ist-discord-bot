datasource db {
    provider = "sqlite"
    url      = "file:./data/bot.db"
}

generator client {
    provider = "prisma-client-js"
}

model Config {
    key   String @id
    value String

    @@map("config")
}

model AttendancePoll {
    id        String @id /// identifier used to keep track of embed on pinned messages
    type      String
    title     String
    cron      String /// cron schedule
    channelId String @map("channel_id") /// channel where to post the poll

    @@map("attendance_polls")
}

model RoleGroup {
    id          String            @id
    mode        String
    placeholder String
    options     RoleGroupOption[]

    @@map("role_groups")
}

model RoleGroupOption {
    label       String
    description String
    value       String     @id
    RoleGroup   RoleGroup? @relation(fields: [roleGroupId], references: [id])
    roleGroupId String?    @map("role_group_id")

    @@map("role_group_options")
}
